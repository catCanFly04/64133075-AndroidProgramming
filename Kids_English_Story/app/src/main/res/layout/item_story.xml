<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/imageViewStoryCoverItem"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/anh1" />
        <!-- Giảm chiều cao một chút (ví dụ 180dp) để phù hợp khi hiển thị 2 cột.
             Bạn có thể điều chỉnh giá trị này.
             android:src="@drawable/anh1" là ảnh placeholder,
             Glide sẽ tải và thay thế nó bằng ảnh bìa thật.
        -->

        <TextView
            android:id="@+id/textViewStoryTitleItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Truyện Mẫu Rất Dài Để Kiểm Tra Xuống Dòng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center_vertical"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
